<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CyberHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CyberProj.styles.css" asp-append-version="true" />

    <style>
        /* Button styles for theme toggle */
        .toggle-btn {
            font-size: 1rem !important; /* Ensure consistent font size */
            padding: 10px 20px !important; /* Set consistent padding */
            background-color: #ff007f !important;
            color: white !important;
            border: none !important;
            border-radius: 10px !important;
            cursor: pointer !important;
            transition: background-color 0.3s, transform 0.3s !important;
        }

        .toggle-btn:hover {
            background-color: #00ffcc !important;
            transform: scale(1.05) !important; /* Optional hover effect */
        }

        /* Optional media queries to adjust the button on different screen sizes */
        @@media (min-width: 768px) {
            .toggle-btn {
                font-size: 1.2rem !important; /* Larger font on bigger screens */
                padding: 12px 24px !important;
            }
        }

        @@media (max-width: 767px) {
            .toggle-btn {
                font-size: 1rem !important; /* Smaller font on smaller screens */
                padding: 8px 16px !important;
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CyberHub</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Rooms" asp-action="Index">TryHackMe</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Threat" asp-action="Index">VirusTotal</a>
                        </li>
                    </ul>

                    <!-- Toggle Button with Image for Theme Switching -->
                    <button class="btn toggle-btn" id="themeToggle" onclick="toggleTheme()" aria-label="Toggle theme">
                        <img id="themeIcon" src="~/images/vraj.png" alt="Theme Icon" width="20px" height="20px"> <!-- Image for dark mode -->
                    </button>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - CyberHub - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Add the JavaScript for Theme Toggle -->
    <script>
        // Check if a theme is already stored in localStorage
        const currentTheme = localStorage.getItem('theme') || 'dark-mode';
        document.body.classList.add(currentTheme);

        const themeIcon = document.getElementById("themeIcon");

        // Set initial image based on current theme
        if (currentTheme === 'dark-mode') {
            themeIcon.src = 'images/vraj.png'; // Image for dark mode
        } else {
            themeIcon.src = 'images/light-mode-icon.png'; // Replace with the path for light mode image
        }

        // Function to toggle between themes
        function toggleTheme() {
            const bodyClassList = document.body.classList;

            if (bodyClassList.contains('dark-mode')) {
                bodyClassList.replace('dark-mode', 'light-mode');
                themeIcon.src = 'images/light-mode-icon.png'; // Image for light mode
                localStorage.setItem('theme', 'light-mode');  // Save preference
            } else {
                bodyClassList.replace('light-mode', 'dark-mode');
                themeIcon.src = 'images/vraj.png'; // Image for dark mode
                localStorage.setItem('theme', 'dark-mode');  // Save preference
            }
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
