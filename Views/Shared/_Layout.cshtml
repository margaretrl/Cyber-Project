<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CyberProj</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CyberProj.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" /> <!-- FontAwesome -->
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CyberProj</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Rooms" asp-action="Index">TryHackMe Rooms</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Dashboard" asp-action="Index">Dashboards</a>
                        </li>
                    </ul>

                    <!-- Toggle Button with Icon for Theme Switching -->
                    <button class="btn toggle-btn" id="themeToggle" onclick="toggleTheme()" aria-label="Toggle theme">
                        <i class="fas fa-moon" id="themeIcon"></i> <!-- FontAwesome Icon -->
                    </button>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - CyberProj - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Add the JavaScript for Theme Toggle -->
    <script>
        // Check if a theme is already stored in localStorage
        const currentTheme = localStorage.getItem('theme') || 'dark-mode';
        document.body.classList.add(currentTheme);

        const themeIcon = document.getElementById("themeIcon");

        // Set initial icon
        if (currentTheme === 'dark-mode') {
            themeIcon.classList.replace("fa-sun", "fa-moon");
        } else {
            themeIcon.classList.replace("fa-moon", "fa-sun");
        }

        // Function to toggle between themes
        function toggleTheme() {
            const bodyClassList = document.body.classList;

            if (bodyClassList.contains('dark-mode')) {
                bodyClassList.replace('dark-mode', 'light-mode');
                themeIcon.classList.replace("fa-moon", "fa-sun");
                localStorage.setItem('theme', 'light-mode');  // Save preference
            } else {
                bodyClassList.replace('light-mode', 'dark-mode');
                themeIcon.classList.replace("fa-sun", "fa-moon");
                localStorage.setItem('theme', 'dark-mode');  // Save preference
            }
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
