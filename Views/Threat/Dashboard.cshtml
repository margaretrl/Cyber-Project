@model Cyber_Proj.Models.VirusTotalResult

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Check URL for Cybersecurity Threats</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>
    <div class="container my-5">
        <h1 class="mb-4">Check a URL for Cybersecurity Threats</h1>
        <p>Enter a URL below to check for cybersecurity threats using VirusTotal API.</p>

        <!-- Form to input URL -->
        <form action="/Threat/CheckUrl" method="post" class="mb-4">
            <div class="form-group">
                <label for="urlInput">Enter URL:</label>
                <input type="text" class="form-control" id="urlInput" name="url" placeholder="https://example.com" required>
            </div>
            <button type="submit" class="btn btn-primary">Check URL</button>
        </form>

        <!-- Display results after checking the URL -->
        @if (Model != null)
        {
            <div class="card mb-3 shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h5>URL Scan Report</h5>
                </div>
                <div class="card-body">
                    <h5 class="card-title">URL: @Model.Url</h5>
                    <p><strong>Scan Date:</strong> @Model.ScanDate</p>
                    <p><strong>Positives:</strong> @Model.Positives/@Model.Total</p>
                    <p><a href="@Model.Permalink" target="_blank" class="btn btn-primary">View Full Report</a></p>
                </div>
            </div>
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
</body>
</html>
